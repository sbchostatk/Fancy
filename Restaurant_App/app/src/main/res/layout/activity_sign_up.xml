<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main3"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/b8"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true">


    <TextView
        android:id="@+id/lable_signup"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textColor="#585858"
        android:textSize="28dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Enter first name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/lb_en"
        android:textSize="19sp"
        android:layout_below="@+id/lable_signup"
        android:layout_alignParentStart="true"
        android:textColor="#696969" />


    <TextView
        android:text="Enter last name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/en_ln"
        android:textColor="#696969"
        android:layout_alignTop="@+id/editText4"
        android:layout_alignParentStart="true"
        android:textSize="19sp" />

    <TextView
        android:text="Enter e-mail"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/en_e"
        android:textColor="#696969"
        android:layout_alignBaseline="@+id/editText5"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignParentStart="true"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/en_g"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/en_e"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:text="Enter gender"
        android:textColor="#696969"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="152dp"
        android:layout_height="84dp"
        android:layout_above="@+id/checkBox"
        android:layout_below="@+id/en_g"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"

        android:layout_marginBottom="10dp"
        android:text="Enter password"
        android:textColor="#696969"
        android:textSize="19sp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/lb_en"
        android:layout_toEndOf="@+id/en_ln"
        android:layout_marginStart="31dp"
        android:id="@+id/editText3"
        android:textColor="?android:attr/textColorAlertDialogListItem" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginTop="15dp"
        android:id="@+id/editText4"
        android:textColor="?android:attr/colorForeground" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginTop="16dp"
        android:id="@+id/editText5"
        android:textColor="?android:attr/textColorPrimaryNoDisable" />


    <EditText
        android:id="@+id/editText6"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignStart="@+id/editText5"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="?android:attr/colorForeground" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/en_g"
        android:layout_alignEnd="@+id/checkBox"
        android:layout_marginEnd="17dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/en_g"
            android:layout_alignBottom="@+id/en_g"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="33dp"
            android:text="Male"
            android:textColor="#696969" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton"
            android:layout_alignStart="@+id/radioButton"
            android:text="Female"
            android:textColor="#696969" />
    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/lable_signup"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="15dp"
        android:text="SUBMIT"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        android:background="#848484"
        android:textSize="20sp"
        android:textStyle="normal" />


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"

        android:layout_alignStart="@+id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="15dp"
        android:textColor="#585858"
        android:text="I AGREE TO TERMS AND CONDITIONS" />

</RelativeLayout>